<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="controllers.EditGroupControllerSecond" stylesheets="/styles/addGroupStyle.css" alignment="CENTER" hgap="20" vgap="20"
          xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <HBox spacing="10" alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="3">
        <Label text="Group name:"/>
        <TextField fx:id="groupNameField"/>
    </HBox>
    <ListView fx:id="candidates" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <VBox spacing="10" alignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.columnSpan="1">
        <Button text="&gt;" onAction="#left"/>
        <Button text="&lt;" onAction="#right"/>
    </VBox>

    <ListView fx:id="chosen" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

    <HBox spacing="10" alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="3">
        <Button text="back" onAction="#backAction"/>
        <Button text="cancel" onAction="#cancelAction"/>
        <Button text="save" onAction="#save"/>
    </HBox>


</GridPane>