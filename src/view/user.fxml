<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>

<GridPane fx:controller="controllers.UserController" stylesheets="/styles/userStyle.css" alignment="CENTER" hgap="20" vgap="20"
          xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <Label text="First Name:" GridPane.halignment="RIGHT" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Label text="Last Name:" GridPane.halignment="RIGHT" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Label text="Email:" GridPane.halignment="RIGHT" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Label text="Password:" GridPane.halignment="RIGHT" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Label text="Role:" GridPane.halignment="RIGHT" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="firstnameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <TextField fx:id="lastnameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <TextField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <ComboBox fx:id="roleComboBox" promptText="Select a role" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Label fx:id="messageLabel" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="6">
        <Button text="Cancel" onAction="#cancelAction"/>
        <Button text="Save" onAction="#saveAction"/>
    </HBox>
</GridPane>
